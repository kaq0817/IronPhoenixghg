{{ 'custom-branding.css' | asset_url | stylesheet_tag }}

<section class="branding-section page-width color-{{ section.settings.color_scheme }} text-{{ section.settings.text_alignment }}">
  {% if section.settings.logo != blank %}
    {{ section.settings.logo | image_url: width: 360 | image_tag:
      class: 'branding-logo',
      alt: section.settings.logo_alt | default: shop.name,
      loading: 'lazy',
      width: section.settings.logo.width,
      height: section.settings.logo.height
    }}
  {% endif %}

  <div class="branding-block">
    <h2 class="branding-heading h1">{{ section.settings.heading | escape }}</h2>
    <div class="branding-content rte">
      {{ section.settings.content }} {#-- This is richtext; HTML allowed, but beware! --#}
    </div>

    {% if section.settings.cta_label != blank and section.settings.cta_link != blank %}
      <a class="branding-cta-btn" href="{{ section.settings.cta_link | escape }}">
        {{ section.settings.cta_label | escape }}
      </a>
    {% endif %}
  </div>
</section>

{{ 'custom-branding.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .brand-story {
    padding: 4rem 0;
    background: #f8f8f8;
  }

  .brand-story__content {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }

  .brand-story__title {
    font-size: 2.5rem;
    margin-bottom: 2rem;
    color: #333;
  }

  .brand-story__text {
    font-size: 1.1rem;
    line-height: 1.6;
    color: #666;
  }
{%- endstyle -%}

<section class="brand-story">
  <div class="page-width">
    <div class="brand-story__content">
      <h2 class="brand-story__title">{{ section.settings.title | default: "Our Story" }}</h2>
      <div class="brand-story__text">
        {{ section.settings.content | default: "At Iron Phoenix GHG, we believe gaming and wellness go hand in hand. Our carefully curated products support both your gaming performance and mental health." }}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Brand Story",
  "class": "branding-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Brand Logo"
    },
    {
      "type": "text",
      "id": "logo_alt",
      "label": "Logo Alt Text",
      "default": "Iron Phoenix Logo"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our Story"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Story Content",
      "default": "<p>Iron Phoenix GHG is dedicated to empowering gamers, athletes, and creators. Rise from the ashes stronger than ever.</p>"
    },
    {
      "type": "text",
      "id": "cta_label",
      "label": "CTA Label",
      "default": "Explore Now"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA Link",
      "default": "/collections/all"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "default": "center",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ]
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "background-1"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Our Story"
    }
  ],
  "presets": [
    {
      "name": "Brand Story",
      "category": "Text"
    }
  ]
}
{% endschema %}
