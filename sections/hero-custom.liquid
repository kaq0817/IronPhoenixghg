{{ 'section-hero-custom.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .hero-custom {
    text-align: center;
    padding: 4rem 2rem;
    background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
    color: white;
  }

  .hero-custom__title {
    font-size: 3rem;
    margin-bottom: 1rem;
    font-weight: bold;
  }

  .hero-custom__subtitle {
    font-size: 1.2rem;
    margin-bottom: 2rem;
    opacity: 0.9;
  }

  @media screen and (max-width: 749px) {
    .hero-custom__title {
      font-size: 2rem;
    }
  }
{%- endstyle -%}

<section class="hero-custom"
  role="region"
  aria-label="Store Hero Banner"
  {% if section.settings.background_image %}
    style="background-image: url({{ section.settings.background_image | image_url: width: 1800, format: 'webp' }}); background-size: cover; background-position: center;"
  {% endif %}
>
  {% if section.settings.logo %}
    <img
      src="{{ section.settings.logo | image_url: width: 400, format: 'webp' }}"
      alt="{{ section.settings.headline | default: shop.name | escape }}"
      width="200" height="200"
      loading="lazy"
      class="hero-logo"
      style="margin-bottom: 1.5rem; filter: drop-shadow(0 0 10px rgba(var(--color-accent), 0.6)); object-fit: contain;"
    >
  {% endif %}

  {% if section.settings.headline %}
    <h1 class="hero-headline neon-glow">
      {{ section.settings.headline | escape }}
    </h1>
  {% endif %}

  {% if section.settings.subheadline %}
    <p class="hero-subheadline">
      {{ section.settings.subheadline | escape }}
    </p>
  {% endif %}

  {% assign cta_link = section.settings.cta_link | default: routes.all_products_collection_url %}
  {% if section.settings.cta_label and cta_link %}
    <a href="{{ cta_link }}" class="button--neon">
      {{ section.settings.cta_label | escape }}
    </a>
  {% endif %}

  <div class="page-width">
    <h1 class="hero-custom__title">{{ section.settings.title | default: "Welcome to Iron Phoenix GHG" }}</h1>
    <p class="hero-custom__subtitle">{{ section.settings.subtitle | default: "Gaming gear designed with wellness in mind" }}</p>
  </div>
</section>

{% schema %}
{
  "name": "Hero Custom",
  "settings": [
    { "type": "image_picker", "id": "logo", "label": "Hero Logo" },
    { "type": "image_picker", "id": "background_image", "label": "Background Image (Optional)" },
    { "type": "text", "id": "headline", "label": "Headline", "default": "Forged Phoenix" },
    { "type": "text", "id": "subheadline", "label": "Subheadline", "default": "Strength. Resilience. Rebirth." },
    { "type": "url", "id": "cta_link", "label": "CTA Link", "default": "" },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Welcome to Iron Phoenix GHG"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Gaming gear designed with wellness in mind"
    }
  ],
  "presets": [
    {
      "name": "Hero Custom"
    }
  ]
}
{% endschema %}
