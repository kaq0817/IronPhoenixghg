<section
  class="image-with-text section {{ section.settings.section_color_scheme }} {{ section.settings.content_layout }} {{ section.settings.height }}"
  style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;"
>
  <div class="image-with-text__container{% if section.settings.layout == 'text_first' %} image-with-text__reverse{% endif %}">
    {% if section.settings.image %}
      <div
        class="image-with-text__media image-width-{{ section.settings.desktop_image_width }} image-animation-{{ section.settings.image_behavior }}"
        style="flex:0 0 auto;"
      >
        <img
          src="{{ section.settings.image | image_url: '900x600' }}"
          alt="{{ section.settings.image_alt | default: 'Section image' | escape }}"
          loading="lazy"
          width="900"
          height="600"
        >
      </div>
    {% endif %}
    <div
      class="image-with-text__content align-{{ section.settings.desktop_content_alignment }} align-mobile-{{ section.settings.mobile_content_alignment }} valign-{{ section.settings.desktop_content_position }}"
    >
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'heading' %}
            {% assign heading_tag = block.settings.heading_size | default: 'h2' %}
            <{{ heading_tag }} class="image-with-text__heading">
              {{ block.settings.heading | escape }}
            </{{ heading_tag }}>
          {% when 'caption' %}
            <div class="image-with-text__caption text-{{ block.settings.text_style }} size-{{ block.settings.text_size }}">
              {{ block.settings.caption | escape }}
            </div>
          {% when 'text' %}
            <div class="image-with-text__desc text-{{ block.settings.text_style }}">
              {{ block.settings.text }}
            </div>
          {% when 'button' %}
            {% if block.settings.button_label != blank and block.settings.button_link != blank %}
              <a
                href="{{ block.settings.button_link }}"
                class="image-with-text__button button{% if block.settings.button_style_secondary %} button--secondary{% endif %}"
                {% if section.settings.button_new_tab %}target="_blank" rel="noopener noreferrer"{% endif %}
              >
                {{ block.settings.button_label | escape }}
              </a>
            {% endif %}
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</section>

