{{ 'password-footer.css' | asset_url | stylesheet_tag }}

<footer class="password-footer color-{{ section.settings.color_scheme }} gradient">
  <div class="password-footer__wrapper">
    <ul class="list-social list-unstyled" role="list">
      {% if settings.social_twitter_link %}
        <li class="list-social__item">
          <a href="{{ settings.social_twitter_link }}" class="link list-social__link" target="_blank" rel="noopener">
            <img src="{{ 'icon-twitter.svg' | asset_url }}" alt="{{ 'general.social.links.twitter' | t }}" width="24" height="24" class="social-icon">
          </a>
        </li>
      {% endif %}
      {% if settings.social_facebook_link %}
        <li class="list-social__item">
          <a href="{{ settings.social_facebook_link }}" class="link list-social__link" target="_blank" rel="noopener">
            <img src="{{ 'icon-facebook.svg' | asset_url }}" alt="{{ 'general.social.links.facebook' | t }}" width="24" height="24" class="social-icon">
          </a>
        </li>
      {% endif %}
      {% if settings.social_instagram_link %}
        <li class="list-social__item">
          <a href="{{ settings.social_instagram_link }}" class="link list-social__link" target="_blank" rel="noopener">
            <img src="{{ 'icon-instagram.svg' | asset_url }}" alt="{{ 'general.social.links.instagram' | t }}" width="24" height="24" class="social-icon">
          </a>
        </li>
      {% endif %}
      {% if settings.social_youtube_link %}
        <li class="list-social__item">
          <a href="{{ settings.social_youtube_link }}" class="link list-social__link" target="_blank" rel="noopener">
