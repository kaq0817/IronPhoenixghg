{{ 'password-header.css' | asset_url | stylesheet_tag }}

<header class="password-header color-{{ section.settings.color_scheme }} gradient">
  <div class="password-header__wrapper">
    <div class="password-header__logo">
      {% if section.settings.logo != blank %}
        <img src="{{ section.settings.logo | image_url: width: 300, format: 'webp' }}" alt="{{ shop.name | escape }}" width="150" height="150" loading="lazy" style="max-width: 100%; height: auto;">
      {% else %}
        <h1 class="password-header__store-name">{{ shop.name }}</h1>
      {% endif %}
    </div>
    <h2 class="password-header__title">
      {{ 'password_page.login_form_heading' | t }}
    </h2>
    {% form 'storefront_password', id: 'login_form', class: 'password-header__form' %}
      <label for="Password" class="password-header__label">
        {{ 'password_page.login_form_label' | t }}
      </label>
      <input type="password" name="password" id="Password" class="password-header__input" placeholder="{{ 'password_page.login_form_password_placeholder' | t }}" autocomplete="current-password" required>
      {% if form.errors %}
        <p class="password-header__error" role="alert">{{ 'password_page.login_form_error' | t }}</p>
      {% endif %}
      <button type="submit" class="password-header__button">
        {{ 'password_page.login_password_button' | t }}
      </button>
    {% endform %}

    <ul class="list-social list-unstyled" role="list">
      {% if settings.social_twitter_link %}
        <li class="list-social__item">
          <a href="{{ settings.social_twitter_link }}" class="link list-social__link" target="_blank" rel="noopener">
            <img src="{{ 'icon-twitter.svg' | asset_url }}" alt="{{ 'general.social.links.twitter' | t }}" width="24" height="24" class="social-icon">
          </a>
        </li>
      {% endif %}
      {% if settings.social_facebook_link %}
        <li class="list-social__item">
          <a href="{{ settings.social_facebook_link }}" class="link list-social__link" target="_blank" rel="noopener">
            <img src="{{ 'icon-facebook.svg' | asset_url }}" alt="{{ 'general.social.links.facebook' | t }}" width="24" height="24" class="social-icon">
          </a>
        </li>
      {% endif %}
      {% if settings.social_instagram_link %}
        <li class="list-social__item">
          <a href="{{ settings.social_instagram_link }}" class="link list-social__link" target="_blank" rel="noopener">
            <img src="{{ 'icon-instagram.svg' | asset_url }}" alt="{{ 'general.social.links.instagram' | t }}" width="24" height="24" class="social-icon">
          </a>
        </li>
      {% endif %}
      {% if settings.social_youtube_link %}
        <li class="list-social__item">
          <a href="{{ settings.social_youtube_link }}" class="link list-social__link" target="_blank" rel="noopener">
            <img src="{{ 'icon-youtube.svg' | asset_url }}" alt="{{ 'general.social.links.youtube' | t }}" width="24" height="24" class="social-icon">
          </a>
        </li>
      {% endif %}
      {% if settings.social_tiktok_link %}
        <li class="list-social__item">
          <a href="{{ settings.social_tiktok_link }}" class="link list-social__link" target="_blank" rel="noopener">
            <img src="{{ 'icon-tiktok.svg' | asset_url }}" alt="{{ 'general.social.links.tiktok' | t }}" width="24" height="24" class="social-icon">
          </a>
        </li>
      {% endif %}
      {% if settings.social_pinterest_link %}
        <li class="list-social__item">
          <a href="{{ settings.social_pinterest_link }}" class="link list-social__link" target="_blank" rel="noopener">
            <img src="{{ 'icon-pinterest.svg' | asset_url }}" alt="{{ 'general.social.links.pinterest' | t }}" width="24" height="24" class="social-icon">
          </a>
        </li>
      {% endif %}
      {% if settings.social_vimeo_link %}
        <li class="list-social__item">
          <a href="{{ settings.social_vimeo_link }}" class="link list-social__link" target="_blank" rel="noopener">
            <img src="{{ 'icon-vimeo.svg' | asset_url }}" alt="{{ 'general.social.links.vimeo' | t }}" width="24" height="24" class="social-icon">
          </a>
        </li>
      {% endif %}
      {% if settings.social_snapchat_link %}
        <li class="list-social__item">
          <a href="{{ settings.social_snapchat_link }}" class="link list-social__link" target="_blank" rel="noopener">
            <img src="{{ 'icon-snapchat.svg' | asset_url }}" alt="{{ 'general.social.links.snapchat' | t }}" width="24" height="24" class="social-icon">
          </a>
        </li>
      {% endif %}
      {% if settings.social_tumblr_link %}
        <li class="list-social__item">
          <a href="{{ settings.social_tumblr_link }}" class="link list-social__link" target="_blank" rel="noopener">
            <img src="{{ 'icon-tumblr.svg' | asset_url }}" alt="{{ 'general.social.links.tumblr' | t }}" width="24" height="24" class="social-icon">
          </a>
        </li>
      {% endif %}
    </ul>

    <div class="password-header__powered">
      <small>
        {{ 'password_page.powered_by_shopify_html' | t }}
      </small>
      <small>
        {{ 'password_page.admin_link_html' | t }}
      </small>
    </div>
  </div>
</header>

