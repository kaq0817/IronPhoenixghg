{% comment %}
  Dynamic Sub-Collections Display
  Uses metafield on main collection to list sub-collection handles
  Metafield definition:
    Namespace: custom
    Key: sub_collections (list of single-line text)
{% endcomment %}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .sub-collections__grid {
    list-style: none;
    padding: 0;
    margin: 0;
    gap: 2rem;
  }

  .collection-tile {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .collection-image-wrapper {
    margin-bottom: 1rem;
    overflow: hidden;
  }

  .collection-title {
    text-align: center;
    margin: 0;
  }
{%- endstyle -%}

{% assign main_collection = collections[section.settings.main_collection] %}
{% assign sub_handles = main_collection.metafields.custom.sub_collections %}

{% if sub_handles.size > 0 %}
  <div class="sub-collections section-{{ section.id }}-padding color-{{ section.settings.color_scheme }}">
    <div class="page-width">
      {% if section.settings.heading != blank %}
        <h2 class="sub-collections__title">{{ section.settings.heading }}</h2>
      {% endif %}

      <ul class="grid grid--2-col-tablet-down grid--{{ section.settings.columns_desktop }}-col-desktop sub-collections__grid">
        {% for handle in sub_handles %}
          {% assign sub = collections[handle] %}
          {% if sub != blank %}
            <li class="grid__item">
              <a href="{{ sub.url }}" class="collection-tile">
                {% if sub.image %}
                  <div class="collection-image-wrapper">
                    <img
                      src="{{ sub.image | image_url: width: 600 }}"
                      alt="{{ sub.title }}"
                      loading="lazy"
                      width="600"
                      height="400"
                      style="border-radius: 12px;"
                    >
                  </div>
                {% endif %}
                <h3 class="collection-title">{{ sub.title }}</h3>
              </a>
            </li>
          {% endif %}
        {% endfor %}
      </ul>
    </div>
  </div>
{% endif %}

{% schema %}
{
  "name": "Sub-Collections",
  "tag": "section",
  "settings": [
    {
      "type": "collection",
      "id": "main_collection",
      "label": "Main Collection",
      "default": "gaming"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Explore Categories"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "scheme-1"
    },
    {
      "type": "select",
      "id": "columns_desktop",
      "label": "Desktop Columns",
      "default": "4",
      "options": [
        { "label": "2", "value": "2" },
        { "label": "3", "value": "3" },
        { "label": "4", "value": "4" },
        { "label": "5", "value": "5" }
      ]
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top Padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 36,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom Padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 36,
      "unit": "px"
    }
  ],
  "presets": [
    {
      "name": "Sub-Collections",
      "category": "Custom"
    }
  ]
}
{% endschema %}
